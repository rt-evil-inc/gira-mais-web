    "lint": "eslint .",
    "db:start": "docker run -d --name gira-web-db-dev -e POSTGRES_USER=postgres -e POSTGRES_PASSWORD=postgres -e POSTGRES_DB=gira -p 5432:5432 postgres:14-alpine",
